<div class="container border-top border-bottom border-light p-2">
<div class="row d-flex justify-content-center">
{{#if blogs}}
    <div class="row">
        <div class="col-md-12">
            <h3>Recent Posts</h2>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-md-12">
            <h3>No posts yet</h2>
        </div>
    </div>
{{/if}}
</div>
{{#if loggedIn}}
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-md-12">
            <button id="postBtn" onclick="window.location.href = '/post'">New Post</button>
        </div>
    </div>
</div>
{{else}}
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-md-12">
            <h3>Make a post by <a href="/login">logging in</a></h2>
        </div>
    </div>
{{/if}}
</div>
</div>
<div class="row mb-4 mt-4 d-flex align-items-stretch" id="cards">
{{#each blogs as |post|}}
            <div class="card d-flex" style="" data-id={{post.id}}>
                <div class="card-border"></div>
                <div class="card-body border-top border-bottom border-success">
                    <h5 class="card-title mb-2 border-bottom border-success-subtle">{{post.title}}</h5>
                    <p class="card-text" style="">{{format_post post.content}}</p>
                </div>
                <div class="card-footer d-flex align-items-start">
                    <small class="text-muted">Posted by {{post.user.username}} on {{format_date post.createdAt}}</small>
                </div>
            </div>
{{/each}}
</div>
<script src="/js/homepage.js"></script>

